<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10"
    android:paddingTop="@dimen/dp_12"
    android:paddingBottom="@dimen/dp_12">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/itemPosterAvatar"
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_32"
            android:padding="@dimen/dp_2"
            android:src="@mipmap/ic_test_avatart" />

        <TextView
            android:id="@+id/itemPosterNickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:textColor="@color/text_dark"
            android:text="BurNing"
            android:layout_gravity="center" />
    </LinearLayout>

    <sj.keyboard.widget.EmoticonsEditText
        android:layout_marginTop="@dimen/dp_10"
        android:id="@+id/itemPostContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ceshiceshiidddddddd"
        android:textColor="@color/text_dark"
        android:textSize="@dimen/text_16sp"
        android:layout_marginLeft="44dp" />

    <TextView
        android:layout_marginTop="@dimen/dp_4"
        android:id="@+id/itemPostTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="2017-05-01"
        android:textColor="@color/grey_BBBABB"
        android:textSize="@dimen/text_10sp"
        android:layout_marginLeft="@dimen/dp_28" />
</LinearLayout>