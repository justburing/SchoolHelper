<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/view_toolbar_2" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_12"
                android:background="#55E8E8E8" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_10"
                    android:text="真实姓名" />

                <ImageView
                    android:id="@+id/question"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_question" />
            </LinearLayout>

            <EditText
                android:id="@+id/userTruename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/rect_bg"
                android:inputType="text"
                android:paddingBottom="@dimen/dp_12"
                android:paddingLeft="@dimen/dp_8"
                android:paddingTop="@dimen/dp_12" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_10"
                    android:text="学号" />
            </LinearLayout>

            <EditText
                android:inputType="number"
                android:maxLength="13"
                android:id="@+id/userStudentId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/rect_bg"
                android:paddingBottom="@dimen/dp_12"
                android:paddingLeft="@dimen/dp_8"
                android:paddingTop="@dimen/dp_12" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                android:paddingTop="@dimen/dp_10"
                android:text="手机号码" />

            <EditText
                android:id="@+id/userPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/rect_bg"
                android:paddingBottom="@dimen/dp_12"
                android:paddingLeft="@dimen/dp_8"
                android:paddingTop="@dimen/dp_12" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                android:paddingTop="@dimen/dp_10"
                android:text="验证码" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10">

                <EditText
                    android:id="@+id/userPhoneVertifyCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/rect_bg"
                    android:paddingBottom="@dimen/dp_12"
                    android:paddingLeft="@dimen/dp_8"
                    android:paddingTop="@dimen/dp_12" />

                <Button
                    android:id="@+id/sendPhoneVertifyCode"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:background="@color/cyan800"
                    android:paddingBottom="@dimen/dp_4"
                    android:paddingTop="@dimen/dp_4"
                    android:text="发送验证码"
                    android:textColor="@color/white" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                android:paddingTop="@dimen/dp_10"
                android:text="邮箱" />

            <EditText
                android:id="@+id/userEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/rect_bg"
                android:inputType="textEmailAddress"
                android:paddingBottom="@dimen/dp_12"
                android:paddingLeft="@dimen/dp_8"
                android:paddingTop="@dimen/dp_12" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center">

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_0.5"
                    android:layout_weight="1"
                    android:background="@color/light_white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:text="学生证头像页/身份证正面/校园卡头像面照片"
                    android:textColor="@color/text_grey"
                    android:textSize="@dimen/text_10sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_0.5"
                    android:layout_weight="1"
                    android:background="@color/light_white" />
            </LinearLayout>

            <ImageView
                android:id="@+id/takePhoto"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginLeft="@dimen/dp_32"
                android:layout_marginRight="@dimen/dp_32"
                android:padding="48dp"
                android:src="@mipmap/ic_take_photo" />

            <com.burning.smile.schoolhelper.widget.ProcessImageView
                android:id="@+id/userVertifyPicture"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                android:layout_marginLeft="@dimen/dp_32"
                android:layout_marginRight="@dimen/dp_32"
                android:visibility="gone" />

            <Button
                android:id="@+id/comfirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_48"
                android:layout_marginBottom="@dimen/dp_12"
                android:background="@color/blue500"
                android:text="确认验证"
                android:textColor="@color/white" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>