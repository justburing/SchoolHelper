<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingBottom="@dimen/dp_16"
    android:paddingTop="@dimen/dp_16">

    <LinearLayout
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_8"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backIv"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:src="@mipmap/ic_incorrect" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_toLeftOf="@+id/title"
                android:id="@+id/icon"
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_22"
                android:src="@mipmap/ic_icon_3" />

            <TextView
                android:id="@+id/title"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dp_4"
                android:text="支付详情"
                android:textColor="@color/text_dark_1"
                android:textSize="@dimen/text_16sp" />
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_8"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:background="@color/light_white"/>
    <LinearLayout
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8"
        android:layout_width="match_parent"
       android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/text_20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单信息"/>
        <TextView
            android:gravity="right|center"
            android:id="@+id/orderInfoTv"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="快递代领发布悬赏金"
            android:textColor="@color/text_dark_1"
            android:textSize="@dimen/text_16sp"/>
    </LinearLayout>
    <View
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_8"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:background="@color/light_white"/>
    <LinearLayout
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/text_20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付账号"/>
        <TextView
            android:gravity="right|center"
            android:id="@+id/orderUsername"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1234567890"
            android:textColor="@color/text_dark_1"
            android:textSize="@dimen/text_16sp"/>
    </LinearLayout>
    <View
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_8"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:background="@color/light_white"/>
    <LinearLayout
        android:id="@+id/payTypeLL"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/text_20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="付款方式"/>
        <TextView
            android:gravity="right|center"
            android:id="@+id/payType"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="流币"
            android:textColor="@color/text_dark_1"
            android:textSize="@dimen/text_16sp"/>
        <ImageView
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_gravity="center"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:src="@mipmap/arrow_right"/>
    </LinearLayout>
    <View
        android:layout_marginTop="@dimen/dp_8"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:background="@color/light_white"/>
    <LinearLayout
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/text_20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_dark_1"
            android:text="需付款"/>
        <TextView
            android:gravity="right|center"
            android:id="@+id/orderMoney"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123liubi"
            android:textColor="@color/text_dark_1"
            android:textSize="@dimen/text_16sp"/>
    </LinearLayout>
    <Button
        android:layout_marginTop="@dimen/dp_24"
        android:id="@+id/pay"
        android:layout_marginLeft="@dimen/dp_32"
        android:layout_marginRight="@dimen/dp_32"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rect_btn_pay_bg"
        android:textColor="@color/white"
        android:textSize="@dimen/text_18sp"
        android:text="确认付款"/>
    </LinearLayout>
</LinearLayout>